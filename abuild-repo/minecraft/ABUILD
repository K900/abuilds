pkgname=minecraft
pkgver=9999
pkgbuild=1
arch=('noarch')

shortdesc="Minecraft launcher."
tags="games games-misc"

adddep="jre zenity"

build()
{
	mkdir -p $pkgdir/usr/{bin,share/minecraft}
	install -Dm755 $filedir/minecraft $pkgdir/usr/bin/minecraft
}

