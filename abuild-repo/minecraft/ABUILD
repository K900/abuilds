pkgname=minecraft
pkgver=1.8.1
pkgbuild=1
arch=('noarch')

shortdesc="Minecraft launcher."

tags="games games-misc"

adddep="jre"
provides="minecraft"
source="https://s3.amazonaws.com/MinecraftDownload/launcher/minecraft.jar n o"

build()
{
	mkdir -p $pkgdir/usr/{bin,share/{minecraft,applications,pixmaps}}
	cp $srcache/minecraft.jar $pkgdir/usr/share/minecraft
	install -Dm755 $filedir/minecraft $pkgdir/usr/bin/minecraft
}

